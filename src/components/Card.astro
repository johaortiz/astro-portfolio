---
const { title, subTitle, tecnologies } = Astro.props;
---

<button class="btn w-40" onclick="
my_modal_0.showModal()
">{title}</button>
<dialog id="my_modal_0" class="modal modal-bottom sm:modal-middle">
  <form method="dialog" class="modal-box">
    <h3 class="font-bold text-lg">{subTitle}</h3>
    <div class="grid grid-cols-2 mt-9">
      {
        tecnologies.map((name: string) => {
          return <p class="p-1">{name}</p>;
        })
      }
    </div>
    <div class="modal-action">
      <button class="btn">Cerrar</button>
    </div>
  </form>
</dialog>

