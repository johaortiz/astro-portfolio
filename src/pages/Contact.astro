---
import contactImg from "../../public/pictures/contact.jpg";
import Redes from "../components/Contact/Redes.astro";
---

<section
    id="contact"
    class="landing-section bg-black h-screen w-full text-center relative overflow-hidden text-white"
    data-header-color="white"
>
    <div class="z-30 relative h-full flex flex-col">
        <header class="pt-20 z-40">
            <div
                class="rounded-lg z-40 relative flex flex-col justify-center items-center"
            >
                <div class="py-2">
                    <h2
                        class="font-semibold text-3xl py-2 px-10 hover:text-[#dfdfdf] duration-500"
                    >
                        Contacto
                    </h2>
                    <p>Â¡Mis Redes Sociales!</p>
                </div>
                <Redes />
            </div>
            <div class="absolute top-0 bottom-0 h-full w-full z-10">
                <img
                    class="object-cover object-center h-full w-full top-0 bottom-0 opacity-30"
                    src={contactImg}
                    alt="bg"
                />
            </div>
        </header>
        <footer
            class="flex flex-col sm:flex-row flex-grow justify-end sm:justify-center items-center z-40 relative [&>button]:m-3"
        >
        </footer>
    </div>
</section>
